{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**",
        "build/**",
        "api/**",
        "public/build/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "frontend#build": {
      "env": [
        "API_HOST",
        "COOKIE_SECRET",
        "NODE_ENV"
      ],
      "outputs": [
        "build/**",
        "public/build/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "api#build": {
      "env": [
        "SPOTIFY_CLIENT_ID",
        "SPOTIFY_CLIENT_SECRET",
        "SPOTIFY_REDIRECT"
      ],
      "outputs": [
        "dist/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "test": {
      "outputs": [
        "coverage/**"
      ],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": [
        "^build"
      ],
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}